<div class="form-group">
  <% if a.thumbnail.present? %>
    <%= image_tag(a.thumbnail.url) %>
  <% end %>
  <br>
  <%= f.label :thumbnail, "サムネイル" %>
  <%= f.file_field :thumbnail, class: 'form-control' %>
</div>
<div >
  <%= f.label :published_at, "公開日", class:'form-label' %>
  <div class='form-row'>
    <%= f.datetime_select(:published_at, {default: DateTime.now}, class: 'form-control col') %>
  </div>
</div>
<div class="form-group">
  <%= f.label :title, "タイトル" %>
  <%= f.text_field :title, class: 'form-control' %>
</div>
<div class='form-group'>
  <div id='tag-field'>
    <%= label :content, 'タグ(,区切りで入力)', class: 'action_text_label' %> <br>
    <p><small>例：ゼミ,R,データ加工</small></p>
    <ul id='tag-input'></ul>
    <%= hidden_field_tag :hidden_tag, @tag_list %>
  </div>
</div>
<div>
  <%= f.label :content, "本文" %>
  <%= f.text_area :content, id: 'summernote' %>
  <%= hidden_field_tag :article_id, a.id %>
</div>
