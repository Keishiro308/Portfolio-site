<div class="form-group">
  <%= f.label :name, "タイトル" %>
  <%= f.text_field :name, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :link, "リンク" %>
  <%= f.text_field :link, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :detail, "詳細" %>
  <%= f.text_area :detail, class: 'form-control', rows: 3 %>
</div>
<div class="form-group">
  <% if p.image.present? %>
    <%= image_tag(p.image.url) %>
  <% end %>
  <br>
  <%= f.label :image, "サムネイル" %>
  <%= f.file_field :image, class: 'form-control' %>
</div>